//exercice 2:calculons le factoriel d'un nombre
int main(){

   int i,F
    write (STDOUT_FILENO"entrer un nombre positif",15);
   char tanpom[100]
   int n=read (STDIN_FILENO,tanpom,100);
   n=atoi (tanpom);

   int facto (int nombre){
    int Fact=1;
    for (i=1;i<nombre;i++{
         Fact=nombre*facto(nombre-i);
   }
    return Fact;
}
if (n==0){
    F=0;
}
else{
    F=facto(n);
}

printf("le factoriel de %d est:%d",n,F);

}
